<div class="carousel slide mt-5" data-bs-ride="carousel">

  {{! Indicators }}
    <ol class="carousel-indicators">
      <li data-target="#hero_carousel_control" data-slide-to="0" class="active"></li>
      <li data-target="#hero_carousel_control" data-slide-to="1"></li>
      <li data-target="#hero_carousel_control" data-slide-to="2"></li>
    </ol>

  {{! Wrapper for Slides }}
  <div class="carousel-inner hero_carousel">
    <div class="carousel-item active">
      <a href="/breaths"><img class="d-block rounded mx-auto hero_carousel_img" src="/images/carousel_breathe.jpeg" alt="Breathe Neon Light in Foliage"></a>
    </div>
    <div class="carousel-item">
      <a href="./pmr.html"><img class="d-block rounded mx-auto hero_carousel_img" src="/images/carousel_relax.jpeg" alt="Relax with Progressive Muscle Relaxation (PMR)">
        {{!-- <div class="carousel-caption d-none d-md-block">
    <h5>Progressive Muscle Relaxation</h5> --}}
    </a>
    </div>
    <div class="carousel-item">
      <a href="./imagery.html"><img class="d-block rounded mx-auto hero_carousel_img" src="/images/carousel_imagine.jpeg" alt="Guided Imagery"></a>
    </div>
  </div>


{{! Left and Right Controls }}
  <a class="carousel-control-prev" href="#hero_carousel_control" role="button" data-slide="prev" onclick="$('#hero_carousel_control').carousel('prev')">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only"></span>
  </a>
  <a class="carousel-control-next" href="#hero_carousel_control" role="button" data-slide="next" onclick="$('#hero_carousel_control').carousel('next')">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only"></span>
  </a>
</div>

